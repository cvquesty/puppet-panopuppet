SQLITE_DIR: '<%= scope.lookupvar('::panopuppet::wsgi_dir') %>'
SECRET_KEY: '<%= scope.lookupvar('::panopuppet::secret_key') %>'
DEBUG: false
TEMPLATE_DEBUG: false
ALLOWED_HOSTS:
<% scope.lookupvar('::panopuppet::allowed_hosts').each do |aHost| %>
  - '<%= aHost %>'
<% end %>
LANGUAGE_CODE: en
TIME_ZONE: America/New_York
STATIC_ROOT: "<%= scope.lookupvar('::panopuppet::static_root') %>"

sources:
  'Puppet DB':
    'DEFAULT': true
    'PUPPETDB_HOST': <%= scope.lookupvar('::panopuppet::puppetdb_url') %>
    'PUPPETDB_VERIFY_SSL': false
